<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Conference</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.conference %></td>
    <td><%= team.address %></td>
    <td><%= link_to 'View Schedule', :controller => 'matches', :action =>'season_schedule', :team_id => team.id %></td>
    <td>View Statistics</td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

